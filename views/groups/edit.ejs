<% include ../partials/nogroupheader.ejs %>

<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= group.name %></span>
          <div class="row">
              <form class="col s12" action="/groups/update/<%= group.id %>?_method=PUT" method="POST" autocomplete="off">
                <div class="row">
                  <div class="input-field col s12">
                    <input id="last_name" type="text" class="validate" name="name">
                    <label for="last_name">Name</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input id="last_name" type="text" class="validate" name="description">
                    <label for="last_name">Description</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input id="password" type="password" name = "password" class="validate">
                    <label for="password">Password</label>
                  </div>
                </div>
                <input type="submit" class="waves-effect waves-light btn"></input>
              </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


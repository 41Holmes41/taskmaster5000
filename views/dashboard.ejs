<% include ./partials/header.ejs %>

<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title center">Available Task Pool</span>
          <div class="card-action">
              
            </div>
            
          
            <% if (group.availableTasks[0]) { %>

            <p> <% group.availableTasks.forEach( function(task) {  %></p>
              
            <div class="row">
                <div class="col s12 m6">
                  <div class="card blue darken-1">
                    <div class="card-content white-text">
                      <span class="card-title"><%=task.title%></span>
                      <p>"<%=task.description%>"</p>
                      <p>Points: <%=task.points%></p>
                      <p>Due: <%= task.timeuntilcompletion %> </p>
                      <p><img class="card-pic z-depth-3 profile responsive-img circle" src="<%=task.creatorAvatar%>" alt="">
                        <%=task.creatorName%></p>
                      <hr>
                      <p> Posted <%= task.postDuration %></p>
                    </div>
                    <div class="card-action">
                      <a href="/users/assigntask/<%= task.id %>">Claim</a>
                      <a href="/tasks/show/<%=task._id%>">View Details</a>
                    </div>
                  </div>
                </div>
              </div>

              <% }) %>


            <% } else { %>
            <p>There are no available tasks in this group!</p>
            <% } %>

          
        </div>

      </div>
    </div>
  </div>
</div>

<% include ./partials/footer.ejs %>
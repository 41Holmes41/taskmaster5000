<% include ../partials/header.ejs %>

<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="row ">
        <div class="col s12 m12 ">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title center">Create a New Post</span>    
              <div class="row ">
                <div class="col s1"></div>
                  <form class="col s10 " action="/messages/new" method="POST" autocomplete="off">
                    <div class="row">
                      <div class="input-field col s12">
                        <input id="last_name" type="text" class="validate" name="title">
                        <label for="last_name">Title</label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s12">
                        <textarea id="textarea1" class="materialize-textarea" name="content"></textarea>
                        <label for="textarea1">Message</label>
                      </div>
                    </div>
                    <input type="submit" class="waves-effect waves-light btn"></input>
                  </form>
                  <div class="col s1"></div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
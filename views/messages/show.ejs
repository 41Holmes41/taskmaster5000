<% include ../partials/header.ejs %>


<div class="container">
  <div class="row">
      <div class="col s12">
        <div class="row ">
          <div class="col s12 m12 ">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <span class="card-title center">Message Details</span>
                <div class="row">
                  <div class="col s12 m12">
                    <div class="card blue lighten-3">
                      <div class="card-content white-text">
                        <span class="card-title"><%=message.title%></span>
                        <p><%=message.content%></p>
                        <hr>
                        <p> By <%=message.poster.name%></p>
                        <p>Posted on <%=message.postTime%></p>
                      </div>
                      <div class="card-action">
                      <% if (message.posterId === userPopulated._id.toString()) { %>
                        <a href="#">Delete</a>
                      <% } %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col s1"></div>
                  <form class="col s10" action="/messages/newreply/<%=message.id%>" method="POST" autocomplete="off">
                  <div class="row">
                      <div class="input-field col s12 ">
                        <textarea id="textarea1" class="materialize-textarea" type="textarea" name="content"></textarea>
                        <label for="textarea1" class="">Reply</label>
                      </div>
                    </div>
                    <input type="submit" class="waves-effect waves-light btn"></input>
                  </form>
                  <div class="col s1"></div>
                </div>
                <% if (message.replies[0]) { %>
                  <% message.replies.forEach(function(reply){ %>
                    <div class="row">
                      <div class="col s12 m12">
                        <div class="card blue lighten-3">
                          <div class="card-content white-text">
                            <p><%=reply.content%></p>
                            <hr>
                            <p> Reply By <%=reply.posterName%></p>
                            <p>Posted on <%=reply.postTime%></p>
                          </div>
                          <div class="card-action">
                            <% if (reply.posterId === userPopulated._id.toString()) { %>
                              <a href="#">Delete</a>
                            <% } %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% }) %>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>


<% include ../partials/footer.ejs %>
<% include ../partials/header.ejs %>


<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%=task.title%></span>
          <p>"<%=task.description%>"</p>
          <hr>

          <div class="row">
            <div class="col s6 m6">
              <h6>Points: <%=task.points%></h6>
              <p>Due:<%= task.timeuntilcompletion %> </p>
            </div>
            <div class="col s6 m6">
              <p><%=task.creatorName%></p>
              <img class="card-pic z-depth-3 profile responsive-img circle" src="<%=task.creatorAvatar%>" alt="">
            </div>
          </div>
        </div>
        <div class="card-action">
          <% if (userPopulated._id.equals(task.creatorId)) { %>
          <a href="/tasks/delete/<%=task._id%>">Delete</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>



<% include ../partials/footer.ejs %>
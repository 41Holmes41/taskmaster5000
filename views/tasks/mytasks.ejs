<% include ../partials/header.ejs %>

<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title center">My Current Tasks</span>

          <% if (userPopulated.currentTasks[0]) { %>

          <div class="row">
            <p> <% userPopulated.currentTasks.forEach( function(task) {  %></p>

            <div class="col s6 m4">
              <div class="card blue darken-1">
                <div class="card-content white-text">
                  <span class="card-title"><%=task.title%></span>
                  <p>"<%=task.description%>"</p>

                  <div class="row">
                    <div class="col s6 m6">
                      <h6>Points: <%=task.points%></h6>
                      <p>Due: <%= task.timeuntilcompletion %> </p>
                    </div>
                    <div class="col s6 m6">
                      <p><%=task.creatorName%></p>
                      <img class="card-pic z-depth-3 profile responsive-img circle" src="<%=task.creatorAvatar%>"
                        alt="">
                    </div>
                  </div>
                </div>
                <div class="card-action">
                  <a href="/users/removetask/<%= task._id %>">Return</a>
                  <a href="/users/completetask/<%= task._id %>">Complete</a>
                </div>
              </div>
            </div>

            <% }) %>
          </div>


          <% } else { %>
          <p>You have no current tasks!</p>
          <% } %>


        </div>

      </div>
    </div>
  </div>
</div>






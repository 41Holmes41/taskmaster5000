<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
      <div class="col s12 m12">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title center">My Current Tasks</span>
            
              <% if (userPopulated.currentTasks[0]) { %>
  
              <p> <% userPopulated.currentTasks.forEach( function(task) {  %></p>
                 
              <div class="row">
                  <div class="col s12 m6">
                    <div class="card blue darken-1">
                      <div class="card-content white-text">
                        <span class="card-title"><%=task.title%></span>
                        <p>"<%=task.description%>"</p>
                        <p>Points: <%=task.points%></p>
                        <p>Due: <%= task.timeuntilcompletion %> </p>
                        <p><img class="card-pic z-depth-3 profile responsive-img circle" src="<%=task.creatorAvatar%>" alt="">
                          <%=task.creatorName%></p>
                        
                      </div>
                      <div class="card-action">
                        <a href="/users/removetask/<%= task._id %>">Return to Pool</a>
                        <a href="/users/completetask/<%= task._id %>">Complete</a>
                      </div>
                    </div>
                  </div>
                </div>
  
                <% }) %>
  
  
              <% } else { %>
              <p>You have no current tasks!</p>
              <% } %>
  
            
          </div>

        </div>
      </div>
    </div>
  </div>





<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title center">My Completed Tasks</span>
          
            <% if (userPopulated.completedTasks[0]) { %>

            <p> <% userPopulated.completedTasks.forEach( function(task) {  %></p>
                
            <div class="row">
                <div class="col s12 m6">
                  <div class="card blue darken-1">
                    <div class="card-content white-text">
                      <span class="card-title"><%=task.title%></span>
                      <p>"<%=task.description%>"</p>
                      <p>Points: <%=task.points%></p>
                      <p><img class="card-pic z-depth-3 profile responsive-img circle" src="<%=task.creatorAvatar%>" alt="">
                        <%=task.creatorName%></p>
                    
                    </div>
                  </div>
                </div>
              </div>

              <% }) %>


            <% } else { %>
            <p>You have no completed tasks!</p>
            <% } %>

          
        </div>

      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
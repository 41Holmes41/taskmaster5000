<% include ../partials/header.ejs %>


<div class="container">
  
    <div class="row">
      <div class="col s12 m12">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
              <span class="card-title center">Add a New Task</span>
              
              
              
              

              <div class="row">
                  <form class="col s12" action="/tasks/new" method="POST" autocomplete="off" id="newtask">

                    <div class="row">
                      <div class="input-field col s12">
                        <input id="last_name" type="text" class="validate" name="title">
                        <label for="last_name">Name</label>
                      </div>
                    </div>
                    
                    <div class="row">
                      <div class="input-field col s12">
                        <input id="last_name" type="text" class="validate" name="description">
                        <label for="last_name">Description</label>
                      </div>
                    </div>
                    
                    <div class="row"></div>
                    <input class="" type="datetime-local" name="completion" >
                  </div>
                  
                  
                  <div class="row">
                    <p>Select groups to post task to: </p>
                      <select multiple name="groupids" form="newtask">
                          
                          <% userPopulated.groups.forEach(function(group){ %>

                            <option value="<%=group.id%>"><%=group.name%></option>

                          <%})%>

                        </select>
                  </div>
                  
                  <div class="row">
                  <input type="submit" class="">submit</input>
                </div>
                  
                </form>
              </div>
              
            </div>
          </div>
        </div>
      </div>

    </div>
    
    <script src="../javascripts/newtask.js"></script>
    <% include ../partials/footer.ejs %>
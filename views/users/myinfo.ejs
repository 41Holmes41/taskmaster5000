                      <p>Current Tasks: <%= userPopulated.currentTasks.length %></p>
                      <p>Completed Tasks: <%= userPopulated.completedTasks.length %></p>
                      
                    <div class="card-action">
                      <a href="#">Edit User Information</a>
                    </div>
                  </div>
                </div>
